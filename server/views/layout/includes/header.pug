    .navegacion
        .container 
            .row.justify-content-center.justify-content-md-between.align-items-center.py-4
                .col-6.col-md-4
                    a(href="/")
                        img(src="/assets/img/logo.svg", width="150", alt="Logo Agencia de Viajes")
                .col-6.col-md-8
                    nav.nav.justify-content-center.justify-content-md-end
                        a.nav-link(href="/", class=(ruta === '/' ? 'active-link' : '')) 
                            span(class=(ruta === '/' ? 'active' : '')) Inicio
                        a.nav-link(href="/viajes", class=(ruta === '/viajes' ? 'active-link' : '')) 
                            span(class=(ruta === '/viajes' ? 'active' : '')) Viajes
                        a.nav-link(href="/nosotros", class=(ruta === '/nosotros' ? 'active-link' : ''))
                            span(class=(ruta === '/nosotros' ? 'active' : '')) Nosotros
                        a.nav-link(href="/testimoniales", class=(ruta === '/testimoniales' ? 'active-link' : '')) 
                            span(class=(ruta === '/testimoniales' ? 'active' : '')) Testimoniales